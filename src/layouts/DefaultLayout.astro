---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title, description } = Astro.props;
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---
<!doctype html>
<html lang="en">

<head>
    <BaseHead title={title || SITE_TITLE} description={description || SITE_DESCRIPTION} />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" is:inline></script>
    <script src="https://cdn.jsdelivr.net/npm/bootbox@6.0.0/dist/bootbox.min.js" is:inline></script>
    <link rel="stylesheet" href="https://unpkg.com/@highlightjs/cdn-assets@11.9.0/styles/default.min.css">
    <script src="https://unpkg.com/@highlightjs/cdn-assets@11.9.0/highlight.min.js" is:inline></script>
    <script src="https://unpkg.com/@highlightjs/cdn-assets@11.9.0/languages/go.min.js" is:inline></script>
</head>

<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>

</html>